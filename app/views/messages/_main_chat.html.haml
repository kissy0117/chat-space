.chat-main
  .main-header
    .main-header__left__box
      %h2.main-header__left__box-name
        = @group.name
      %ul.main-header__left__box__member__list-member 
        MEMBER:
        - @group.users.each do |user|
          %li
            = user.name
    = link_to edit_group_path(@group), class: "main-header__edit-btn" do
      = "Edit"

  .messages
    = render @messages
   
  .form
    = form_for [@group, @message], html: {class: "new-messages"} do |f|
      .input-box
        = f.text_field :body, class: "input-box__text", placeholder: "type a message"
        = f.label :image, class: "input-box__image" do
          =icon('fas','image')
          = f.file_field :image, class: "input-box__image__file"
      = f.submit 'Send', class: "submit-btn"